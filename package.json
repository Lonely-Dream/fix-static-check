{
  "name": "fix-static-check",
  "displayName": "fix-static-check",
  "description": "try fix it!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/Lonely-Dream/fix-static-check"
  },
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
        "editor/context": [
            {
                "command": "fix-static-check.fixFunction",
                "when": "editorLangId == c || editorLangId == cpp"
            }
        ]
    },
    "commands":[
        {
            "command": "fix-static-check.fixFunction",
            "title": "Fix Function"
        }
    ],
    "configuration": {
        "title": "fix-static-check",
        "properties": {
            "fix-static-check.minCommentRatio": {
                "type": "number",
                "default": 0.25,
                "description": "最低注释比例，如果低于这个值，将自动插入注释"
            },
            "fix-static-check.autoInsertCommentValue": {
                "type": "string",
                "default": "fix METRICS-19",
                "description": "自动插入注释的内容, 不要超过60字符"
            }
        }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "tree-sitter": "^0.21.1",
    "tree-sitter-c": "^0.21.4"
  }
}
